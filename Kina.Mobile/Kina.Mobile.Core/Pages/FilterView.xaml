<?xml version="1.0" encoding="utf-8" ?>
<mvx:MvxContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Kina.Mobile.Core.Pages.FilterView"
             xmlns:res="clr-namespace:Kina.Mobile.Core.Resources;assembly=Kina.Mobile.Core"
             xmlns:mvx="clr-namespace:MvvmCross.Forms.Core;assembly=MvvmCross.Forms"
             Title="Filter">
  <StackLayout>
    <ScrollView>
      <StackLayout>
        <Entry Placeholder="Title" Text="{Binding Title}"/>
        <Label Text="Start"/>
        <TimePicker Format="HH\:mm" Time="{Binding StartTime, Mode=OneWayToSource}"/>
        <Label Text="End"/>
        <TimePicker Format="HH\:mm" Time="{Binding EndTime, Mode=OneWayToSource}}"/>
        <Picker Title="Genre"
                ItemsSource="{Binding Genre}"
                SelectedItem="{Binding SelectedGenre, Mode=OneWayToSource}"/>
      </StackLayout>
    </ScrollView>
    <Button BackgroundColor="Green" Command="{Binding GoToShowsPageCommand}" Margin="32, 2" Text="Search"/>
    <Button BackgroundColor="Red" Command="{Binding GoBackCommand}" Margin="32, 2" Text="Cancel"/>
  </StackLayout>
</mvx:MvxContentPage>