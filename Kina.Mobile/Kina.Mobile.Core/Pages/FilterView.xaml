<?xml version="1.0" encoding="utf-8" ?>
<mvx:MvxContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Kina.Mobile.Core.Pages.FilterView"
             xmlns:res="clr-namespace:Kina.Mobile.Core.Resources;assembly=Kina.Mobile.Core"
             xmlns:mvx="clr-namespace:MvvmCross.Forms.Views;assembly=MvvmCross.Forms"
             Title="Filter settings"
                    NavigationPage.HasNavigationBar="false">
  <StackLayout>
    <ScrollView>
      <StackLayout>
        <Entry Placeholder="Title" Text="{Binding Title}" Margin="2"/>
        <Label Text="Start" Margin="2"/>
        <TimePicker Format="HH\:mm" Time="{Binding StartTime, Mode=OneWayToSource}" Margin="2"/>
        <Label Text="End" Margin="2"/>
        <TimePicker Format="HH\:mm" Time="{Binding EndTime, Mode=OneWayToSource}" Margin="2"/>
        <Picker Title="Category"
                ItemsSource="{Binding Categories}"
                SelectedItem="{Binding SelectedCategory, Mode=OneWayToSource}"/>
      </StackLayout>
    </ScrollView>
    <Button BackgroundColor="#fcca01" Command="{Binding GoToShowsPageCommand}" Margin="32, 2" Text="Search" FontSize="12" TextColor="Black" BorderRadius="25"/>
    <Button BackgroundColor="Red" Command="{Binding GoBackCommand}" Margin="32, 2" Text="Cancel" FontSize="12" BorderRadius="25"/>
  </StackLayout>
</mvx:MvxContentPage>