<?xml version="1.0" encoding="utf-8" ?>
<mvx:MvxContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Kina.Mobile.Core.Pages.LocationView"
             xmlns:res="clr-namespace:Kina.Mobile.Core.Resources;assembly=Kina.Mobile.Core"
             xmlns:mvx="clr-namespace:MvvmCross.Forms.Core;assembly=MvvmCross.Forms"
             Title="Filter">
  <StackLayout>
    <StackLayout Orientation="Horizontal">
      <Picker x:Name="LocationPicker"
         Title="Choose location"
         ItemsSource="{Binding Location}"
         SelectedItem="{Binding SelectedLocation, Mode=OneWayToSource}"
         HorizontalOptions="FillAndExpand"/>
      <Button Text="Go"
              Command="{Binding ConfimrLocationCommand}"
              WidthRequest="64.0"
              Margin="2, 2"/> 
    </StackLayout>
    <Button Image="Pin.png" Text="Share Your Location"
            Command="{Binding AutoLocateCommand}"
            Margin="8, 2"/>
  </StackLayout>
</mvx:MvxContentPage>