<?xml version="1.0" encoding="utf-8" ?>
<mvx:MvxContentPage x:TypeArguments="viewModels:MasterViewModel"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Kina.Mobile.Core.Pages.MasterView"
             xmlns:res="clr-namespace:Kina.Mobile.Core.Resources;assembly=Kina.Mobile.Core"
             xmlns:mvx="clr-namespace:MvvmCross.Forms.Views;assembly=MvvmCross.Forms"
             xmlns:viewModels="clr-namespace:Kina.Mobile.Core.ViewModels;assembly=Kina.Mobile.Core"
             Title="Master"
             Icon="Menu.png">
    <StackLayout>
        <ListView ItemsSource="{Binding NavigationItems}" x:Name="NavigationMenu">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding ItemName}" Command="{Binding ItemNavigationCommand}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</mvx:MvxContentPage>